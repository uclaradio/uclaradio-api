{
  "name": "uclaradio-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/uclaradio/uclaradio-api",
  "author": "UCLA Radio Web <radio.web@uclaradio.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon",
    "debug": "nodemon --inspect ./bin/www",
    "build": "tsc",
    "precommit": "lint-staged",
    "postmerge": "yarnhook",
    "postcheckout": "yarnhook",
    "postrewrite": "yarnhook"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ignore": ["src/views/"],
    "ext": "ts",
    "exec": "tsc && node"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,scss,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.{js,ts,tsx}",
        "options": {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      }
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "faker": "^4.1.0",
    "morgan": "^1.9.0",
    "pg": "^7.4.1",
    "sequelize": "^4.33.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.0",
    "@types/morgan": "^1.7.35",
    "@types/sequelize": "^4.27.4",
    "concurrently": "^3.5.1",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "nodemon": "^1.14.11",
    "prettier": "^1.10.2",
    "ts-node": "^4.1.0",
    "typescript": "^2.6.2",
    "yarnhook": "^0.1.1"
  }
}
