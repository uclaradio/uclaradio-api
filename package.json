{
  "name": "uclaradio-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/uclaradio/uclaradio-api",
  "author": "UCLA Radio Web <radio.web@uclaradio.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon",
    "build": "tsc",
    "test": "jest"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "src/views/"
    ],
    "ext": "ts",
    "exec": "tsc && node ./bin/www"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*.test.(js|ts)"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "json"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "pg": "^7.4.1",
    "sequelize": "^4.32.1",
    "supertest": "^3.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.0",
    "@types/jest": "^22.1.2",
    "@types/morgan": "^1.7.35",
    "@types/sequelize": "^4.27.4",
    "concurrently": "^3.5.1",
    "jest": "^22.2.2",
    "nodemon": "^1.14.11",
    "ts-jest": "^22.0.3",
    "typescript": "^2.6.2"
  }
}
